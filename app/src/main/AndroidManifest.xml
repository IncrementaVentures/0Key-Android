<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.incrementaventures.okey" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name=".OkeyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.AuthActivity"
            android:label="@string/title_activity_create_account" >
        </activity>
        <activity
            android:name=".Activities.PreferencesActivity"
            android:label="@string/title_activity_preferences" >
        </activity>
        <activity
            android:name=".Activities.DoorConfigurationActivity"
            android:label="@string/title_activity_first_admin_config" >
        </activity>
        <activity
            android:name=".Activities.DoorActivity"
            android:label="@string/title_activity_door"
            android:parentActivityName=".Activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.incrementaventures.okey.Activities.MainActivity" />
        </activity>
        <activity
            android:name=".Activities.NewPermissionActivity"
            android:label="@string/title_activity_new_permission"
            android:parentActivityName=".Activities.DoorActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.incrementaventures.okey.Activities.DoorActivity" />
        </activity>
        <activity
            android:name=".Activities.ShareKeyActivity"
            android:label="@string/title_activity_share_key"
            android:parentActivityName=".Activities.DoorActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.incrementaventures.okey.Activities.DoorActivity" />
        </activity>
    </application>

</manifest>
