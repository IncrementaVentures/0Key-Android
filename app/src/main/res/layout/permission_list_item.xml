<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AvenirGreySmall"
        android:text="Tipo de permiso"
        android:padding="2dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/permission_type_edit"
        android:layout_alignTop="@+id/user_name"
        android:layout_toEndOf="@+id/user_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textAppearance="@style/TextAppearance.AvenirGreySmall"
        android:text="Fecha inicio"
        android:id="@+id/permission_start_date_edit"
        android:layout_below="@+id/permission_type_edit"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AvenirGreySmall"
        android:padding="2dp"
        android:text="Fecha termino"
        android:id="@+id/permission_end_date_edit"
        android:layout_below="@+id/permission_start_date_edit"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AvenirGreySmall"
        android:padding="2dp"
        android:text="Slave"
        android:id="@+id/permission_slave_edit"
        android:layout_below="@+id/permission_end_date_edit"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/delete_permission"
        android:textAppearance="@style/TextAppearance.AvenirGreySmall"
        android:id="@+id/delete_permission_button"
        android:layout_alignTop="@+id/edit_permission_button"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:id="@+id/edit_permission_button"
        android:textAppearance="@style/TextAppearance.AvenirGreySmall"
        android:layout_alignTop="@+id/permission_type_edit"
        android:layout_toStartOf="@+id/delete_permission_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textAppearance="@style/TextAppearance.AvenirGreySmall"
        android:text="@string/name"
        android:id="@+id/user_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>