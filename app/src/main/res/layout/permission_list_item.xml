<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tipo de permiso"
        android:id="@+id/permission_type_edit"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fecha inicio"
        android:id="@+id/permission_start_date_edit"
        android:layout_below="@+id/permission_type_edit"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fecha termino"
        android:id="@+id/permission_end_date_edit"
        android:layout_below="@+id/permission_start_date_edit"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Slave"
        android:id="@+id/permission_slave_edit"
        android:layout_below="@+id/permission_end_date_edit"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_permission"
        android:id="@+id/delete_permission_button"
        android:textSize="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/edit_permission_button"
        android:layout_alignStart="@+id/edit_permission_button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_permission"
        android:id="@+id/edit_permission_button"
        android:textSize="8dp"
        android:layout_alignTop="@+id/permission_end_date_edit"
        android:layout_alignParentEnd="true" />


</RelativeLayout>