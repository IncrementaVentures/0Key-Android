<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_permission"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/card_view"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:padding="16dp"
            android:id="@+id/slave_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:orientation="horizontal"
            android:id="@+id/open_slave_layout"
            android:background="?android:attr/selectableItemBackground"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/more_options_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/open"
                android:id="@+id/textView7"
                android:layout_alignTop="@+id/open_button"
                android:layout_toStartOf="@+id/open_button" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/open_button"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_lock_open_black"
                android:layout_alignTop="@+id/slave_name"
                android:layout_alignBottom="@+id/slave_name"
                android:layout_alignParentEnd="true" />

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_action_more_settings"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/more_options_button"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slave_name"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/permission_type"
                android:id="@+id/textView5"
                android:padding="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/permission_type_unknown"
                android:id="@+id/permission_type"
                android:padding="16dp"
                android:layout_alignBottom="@+id/textView5"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/due_date"
                android:id="@+id/end_date_text_view"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:padding="16dp"
                android:text="@string/permission_type_unknown"
                android:id="@+id/end_date"
                android:layout_alignTop="@+id/end_date_text_view"
                android:layout_alignEnd="@+id/permission_type" />
        </RelativeLayout>


    </RelativeLayout>


