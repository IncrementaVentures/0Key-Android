<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/slave_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:id="@+id/open_slave_layout"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/more_options_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/open"
            android:id="@+id/textView7"
            android:layout_alignTop="@+id/open_button"
            android:layout_toStartOf="@+id/open_button" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/open_button"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_lock_open_black"
            android:layout_alignTop="@+id/slave_name"
            android:layout_alignBottom="@+id/slave_name"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

    <ImageButton
        android:layout_width="30dp"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_action_more_settings"
        android:background="?android:attr/selectableItemBackground"
        android:layout_alignParentTop="true"
        android:id="@+id/more_options_button"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/open_slave_layout" />

</RelativeLayout>