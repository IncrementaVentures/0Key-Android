<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/background_menu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.incrementaventures.okey.Fragments.CreateAccountFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="60dp"
            android:layout_marginBottom="30dp"
            android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
            android:text="0key"
            android:id="@+id/textView"
            android:layout_gravity="center"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
                android:text="@string/full_name_optional"
                android:id="@+id/textView19"
                android:layout_above="@+id/linearLayout"
                android:textColor="@color/white" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
                android:ems="10"
                android:textCursorDrawable = "@null"
                android:textColor="@color/white"
                android:id="@+id/create_account_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
                android:text="@string/password"
                android:id="@+id/textView20" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:textCursorDrawable = "@null"
                android:textColor="@color/white"
                android:id="@+id/create_account_password"
                android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
                android:text="@string/email"
                android:id="@+id/textView21" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:textCursorDrawable = "@null"
                android:textColor="@color/white"
                android:id="@+id/create_account_email"
                android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
                android:textColor="@color/white"
                android:text="@string/phone_number_optional"
                android:id="@+id/textView22" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:textCursorDrawable = "@null"
                android:id="@+id/create_account_phone"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
                android:textColor="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="false"
                android:text="@string/birthday_optional"
                android:id="@+id/textView23"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/create_account_birthday"
            style="?android:editTextStyle"
            android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
            android:textColor="@color/white"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/linearLayout" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:textColor="@color/white"
            android:weightSum="1"
            android:id="@+id/create_account_radio_group">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
                android:textColor="@color/white"
                android:text="@string/gender_optional"
                android:id="@+id/textView24"
                android:layout_weight="0.4" />

            <RadioButton
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="@string/male"
                android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
                android:id="@+id/create_account_male"
                android:layout_gravity="end"
                android:layout_weight="0.3"
                android:buttonTint="@color/white"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female"
                android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                android:id="@+id/create_account_female"
                android:checked="false"
                android:layout_weight="0.3" />
        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Create"
            android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
            android:id="@+id/create_account_button" />

    </LinearLayout>
</ScrollView>