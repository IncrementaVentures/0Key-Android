<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.incrementaventures.okey.Fragments.CreateAccountFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
            android:ems="10"
            android:id="@+id/create_account_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
            android:text="@string/password"
            android:id="@+id/textView20" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/create_account_password"
            android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
            android:text="@string/email"
            android:id="@+id/textView21" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/create_account_email"
            android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
            android:text="@string/phone_number"
            android:id="@+id/textView22" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/create_account_phone"
            android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:text="@string/birthday"
            android:id="@+id/textView23" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
        android:text="0key"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
        android:id="@+id/create_account_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_account_birthday"
        style="?android:editTextStyle"
        android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/linearLayout" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/create_account_birthday"
        android:orientation="horizontal"
        android:layout_above="@+id/create_account_button"
        android:layout_below="@+id/create_account_birthday"
        android:weightSum="1"
        android:id="@+id/create_account_radio_group">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
            android:text="@string/gender"
            android:id="@+id/textView24"
            android:layout_weight="0.4" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/male"
            android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
            android:id="@+id/create_account_male"
            android:layout_gravity="right"
            android:layout_weight="0.3"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/female"
            android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
            android:id="@+id/create_account_female"
            android:checked="false"
            android:layout_weight="0.3" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AvenirGreyMedium"
        android:text="@string/full_name"
        android:id="@+id/textView19"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentStart="true" />

</RelativeLayout>
