<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.incrementaventures.okey.Fragments.MasterFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/slaves_up_bar"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/darker_gray"
                android:text="Master name"
                android:id="@+id/master_name"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow"
                android:background="@android:color/transparent"
                android:padding="20dp"
                android:id="@+id/right_arrow_master"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/master_name"
                android:layout_alignTop="@+id/left_arrow_master" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/left_arrow"
                android:background="@android:color/transparent"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/left_arrow_master"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/master_name" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"

            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/no_slaves_found_yet"
            android:id="@+id/no_slaves_yet"
            android:layout_below="@+id/slaves_up_bar"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/open_button"
            android:src="@drawable/locked_padlock"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/slaves_up_bar" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/permissions_up_bar"
            android:background="@color/turquoise"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:text="Permits"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_add_circle_outline"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:id="@+id/add_permission_button"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
