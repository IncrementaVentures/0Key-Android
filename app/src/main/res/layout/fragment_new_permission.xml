<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.incrementaventures.okey.Fragments.ModifyPermissionFragment">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/cancel_button"
        android:padding="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/view1"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:src="@drawable/cancel_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:padding="10dp"
        android:text="@string/add_new_permission"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/ok_button"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:id="@+id/ok_button"
        android:layout_gravity="right"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_above="@+id/permission_type_layout"
        android:background="@android:color/transparent"
        android:layout_alignEnd="@+id/view1"
        android:src="@drawable/ok_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/permission_type_layout"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="?android:attr/selectableItemBackground"
        android:layout_below="@+id/cancel_button"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/permission_type"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/permission_type_new"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/permission_type_temporal"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        android:background="#B8B8B8"
        android:layout_below="@+id/permission_type_layout"
        android:layout_alignParentStart="true"
        android:id="@+id/view1" />

    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/due_date_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_below="@+id/view2"
        android:layout_alignStart="@+id/view2">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/due_date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:id="@+id/end_date_new"
            android:text="2015-01-01"
            />

    </LinearLayout>

    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/due_hour_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_alignTop="@+id/due_date_layout"
        android:layout_toEndOf="@+id/due_date_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/due_hour"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/end_hour_new"
            android:text="00:00"
            android:textStyle="bold"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        android:background="#B8B8B8"
        android:layout_below="@+id/start_date_layout"
        android:layout_alignParentStart="true"
        android:id="@+id/view2" />


    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/start_date_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_alignTop="@+id/start_hour_layout"
        android:layout_alignStart="@+id/view1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/start_date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="bold"
            android:id="@+id/start_date_new"
            android:text="2015-01-01"
            />

    </LinearLayout>

    <LinearLayout
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/start_hour_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_below="@+id/permission_type_layout"
        android:layout_toEndOf="@+id/start_date_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/start_hour"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/start_hour_new"
            android:text="00:00"
            android:textStyle="bold"
            />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Slave"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"

        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/textView8"
        android:layout_below="@+id/due_date_layout"
        android:layout_alignStart="@+id/due_date_layout" />


    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:id="@+id/permission_slave"
        android:layout_below="@+id/due_date_layout"
        android:layout_toEndOf="@+id/textView8" />



</RelativeLayout>
