<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:listViewStyle">@style/ListView</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/action_bar_color</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.AvenirGreyLarge" parent="android:TextAppearance">
        <item name="fontPath">fonts/avenir.ttf</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/md_grey_700</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.AvenirGreyMedium" parent="android:TextAppearance">
        <item name="fontPath">fonts/avenir.ttf</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/md_grey_700</item>
    </style>

    <style name="TextAppearance.AvenirGreySmall" parent="android:TextAppearance">
        <item name="fontPath">fonts/avenir.ttf</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/md_grey_700</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.AvenirWhiteMedium" parent="android:TextAppearance">
        <item name="fontPath">fonts/avenir.ttf</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.AvenirWhiteLarge" parent="android:TextAppearance">
        <item name="fontPath">fonts/avenir.ttf</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="TextAppearance.AvenirBlackMedium" parent="android:TextAppearance">
        <item name="fontPath">fonts/avenir.ttf</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/md_black_1000</item>
    </style>


    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="background">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>


</resources>
